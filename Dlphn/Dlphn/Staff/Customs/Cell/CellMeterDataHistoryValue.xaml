<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dlphn.Staff.Customs.Cell.CellMeterDataHistoryValue">

    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="lblTextRight" TargetType="Label" BasedOn="{StaticResource stlLblBlue}">
                <Setter Property="HorizontalOptions" Value="EndAndExpand"/>
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <ContentView.Content>
        <StackLayout Orientation="Horizontal"
                   Style="{StaticResource stlCellGeneral}">
            <Label x:Name="lblText" />
            <Label x:Name="lblValue"
                 Style="{StaticResource lblTextRight}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>
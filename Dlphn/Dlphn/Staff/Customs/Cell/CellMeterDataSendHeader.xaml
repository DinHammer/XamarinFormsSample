<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dlphn.Staff.Customs.Cell.CellMeterDataSendHeader">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="stlCellThis" TargetType="StackLayout">
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundWhite}"/>
                <Setter Property="Padding" Value="{StaticResource PaddingLeftRight}"/>
                <Setter Property="Margin" Value="{StaticResource MarginLeftUpRight}"/>
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    
  <ContentView.Content>
      <StackLayout
          Style="{StaticResource stlCellThis}">
            <Label x:Name="lblMeterType" />
            <Label x:Name="lblMeterNumber"
                   Style="{StaticResource stlLblBlueBig}"/>
            <Label x:Name="lblMeterDescription"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>